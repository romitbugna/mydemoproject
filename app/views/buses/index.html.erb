<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Buses Available</h1>
  <%= link_to 'Create new Bus', new_bus_path, class: "btn btn-primary btn-lg my-2" %>
  <table>
    <thead>
      <tr>
        <th>Bus Name </th>
        <th>Bus No </th>
        <th>Seat Type </th>
        <th>From </th>
        <th>To </th>
        <th>Date </th>
        <th>Time </th>
        <th>Total Seat </th>
        <th>Lower class price</th>
        <th>Middle class price</th>
        <th>Higher class price</th>

        <th colspan="3"></th>
        <th colspan="3"></th>
        <th colspan="3"></th>
        <th colspan="3"></th>
        <th colspan="3"></th>
        <th colspan="3"></th>
        <th colspan="3"></th>
        <th colspan="3"></th>
        <th colspan="3"></th>
        <th colspan="3"></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @buses.each do |bus| %>
        <tr>
          <td><%= bus.bus_name %></td>
          <td><%= bus.bus_no %></td>
          <td><%= bus.seat_type %></td>
          <td><%= bus.from %></td>
          <td><%= bus.to %></td>
          <td><%= bus.date %></td>
          <td><%= bus.time %></td>
          <td><%= bus.total_seat %></td> 
          <td><%= bus.lower_class %></td>
          <td><%= bus.middle_class %></td>
          <td><%= bus.higher_class %></td>

          <td><%= link_to "Booking", new_booking_path, :class => ' btn btn-primary' %></td>
          <td><%= link_to 'Show', bus , class: "btn btn-success" %></td>
          <% if current_user.has_role? :admin %>
        <% end %>
          <td><%= link_to 'Edit', edit_bus_path(bus), class: "btn btn-warning" %></td>
          <td><%= link_to 'Destroy', bus, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
      
      <div style="float: right;">
      <%= will_paginate @buses %>
      </div>
    </tbody>
  </table>

  <br>

</div>

