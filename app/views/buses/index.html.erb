<p id="notice"><%= notice %></p>

<h1>Buses Available</h1>

<table>
  <thead>
    <tr>
      <th>ID |</th>
      <th>Bus Name |</th>
      <th>Bus No |</th>
      <th>Seat Type |</th>
      <th>Cost of Ticket |</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buses.each do |bus| %>
      <tr>
        <td><%= bus.id %></td>
        <td><%= bus.bus_name %></td>
        <td><%= bus.bus_no %></td>
        <td><%= bus.seat_type %></td>
        <td><%= link_to "Booked", new_booking_path, :class => 'navbar-link'  %>|</td>
        <td><%= link_to 'Show', bus %>|</td>
        <td><%= link_to 'Edit', edit_bus_path(bus) %>|</td>
        <td><%= link_to 'Destroy', bus, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

